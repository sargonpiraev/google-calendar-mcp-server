    "mcp",
    "claude",
    "ai",
    "assistant",
    "google-calendar"
  ],
  "main": "./build/main.js",
  "types": "./build/main.d.ts",
  "type": "module",
  "files": [
    "build/",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "google-calendar-mcp-server": "./build/main.js"
  },
  "scripts": {
